<%= render "shared/jumbotron"%>



<h3>Listing Restaurants</h3>

<table class="table table-hover ">
  <thead>
    <tr class="table-success">
      <td>Name</td>
      <td>Address</td>
      <td>Phone</td>
      <td>Website</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant|%>
      <tr>
        <td><%= restaurant.name.capitalize %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= link_to restaurant.website, restaurant.website %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-link" %></td>
        <td><%= link_to 'Delete', restaurant, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>


</table>


<%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>
